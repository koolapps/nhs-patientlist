<div class="span6 offset3">
  <div class="page-header">
    <h1>Edit <%= resource_name.to_s.humanize %></h1>
  </div>

  <%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }) do |f| %>
    <%= f.error_notification %>

    <%= f.input :email, :required => true, :autofocus => true, :input_html => { :class => "span6" } %>
    <%= f.input :password, :autocomplete => "off", :hint => "leave it blank if you don't want to change it", :required => false, :input_html => { :class => "span6" } %>
    <%= f.input :password_confirmation, :required => false, :input_html => { :class => "span6" } %>
    <%= f.input :current_password, :hint => "we need your current password to confirm your changes", :required => true, :input_html => { :class => "span6" } %>
    <%= f.input :grade_id, collection: Grade.all %>

    <div class="form-actions">
      <%= f.button :submit, "Update", :class => "btn-primary" %>
    </div>
  <% end %>

  <%= link_to "Back", :back %>
</div>
