<div class="row team" id="team_<%= team.id %>">
  <div class="span2">
    <p><%= team.name %></p>
  </div>
  <div class="span2">
    <p><%= team.shift.name %></p>
  </div>
  <% if current_user.teams.include? team %>
    <p>You are a member of this team</p>
  <% else %>
    <%= form_tag team_members_path do %>
      <%= hidden_field_tag 'user_id', current_user.id %>
      <%= hidden_field_tag 'team_id', team.id %>
      <%= submit_tag "Join" %>
    <% end %>
  <% end %>
</div>
