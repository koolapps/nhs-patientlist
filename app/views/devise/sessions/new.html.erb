<div class="span6 offset3">

  <div class="page-header">
    <h1>Sign in</h1>
  </div>

  <%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
    <%= f.input :email, :required => false, :autofocus => true, :input_html => { :class => "span6" } %>
    <%= f.input :password, :required => false, :input_html => { :class => "span6" } %>

    <div class="form-actions">
        <%= f.input :remember_me, :as => :boolean, :wrapper => :checkbox if devise_mapping.rememberable? %>
        <%= f.button :submit, "Sign in", class: "btn-primary" %>
    </div>
  <% end %>

  <%= render "links" %>

</div>
